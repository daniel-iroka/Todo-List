<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/holo_light_blue_dark</item>
        <item name="colorPrimaryVariant">@color/holo_light_blue_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!-- Our customs themes. -->
        <item name="android:itemTextAppearance">@style/customMenuItemsText</item>
        <item name="actionOverflowMenuStyle">@style/customPopupOverflowBackground</item>
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:datePickerDialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="colorAccent">@color/holo_light_blue_dark</item>
    </style>

    <!-- Custom style for our Dialogs. Date dialog to be specific. -->
    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Light.Dialog" >
        <item name="colorAccent">@color/holo_light_blue_dark</item>
        <item name="android:colorAccent">@color/holo_light_blue_dark</item>
    </style>

    <!-- Custom style for text and background in our menu_item -->
    <style name="customMenuItemsText" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="customPopupOverflowBackground" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_background</item>
    </style>

    <!-- Custom style for text in our Action/ToolBar. -->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">19sp</item>
    </style>
</resources>